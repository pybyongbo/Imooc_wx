page {
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.container image {
    width: 200rpx;
    height: 200rpx;
    /* border-radius: 50rpx; */
    margin-top: 160rpx;
}

.user-name {
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 120rpx;
}

.moto-container {
    margin-top: 200rpx;
    border: 1px solid #405f80;
    width: 200rpx;
    height: 80rpx;
    border-radius: 10px;
    text-align: center;
}

.moto {
    font-size: 22rpx;
    color: #405f80;
    font-weight: bold;
    line-height: 80rpx;
}